<div class="wrapper">
  <div class="header">
    <%= render "hedder" %>
  </div>

<div class="medicine-cld">

  <%= month_calendar events: @statuses do |date, status| %>
    <%= date.day %>
    <% status.each do |status| %>
      <div>
        <% if status.taking_id == 2 %>
          <%= image_tag "Heartbaloons", class:"baloon", :size =>'40x40' %>
        <% elsif status.taking_id == 3 %>
          <%= image_tag "Heartbaloonsbrank", class:"baloon", :size =>'40x40' %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

  <div class="btn-contents">
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
</div>